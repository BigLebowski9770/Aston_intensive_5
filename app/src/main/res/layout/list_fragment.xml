<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/scroll_view"
            app:layout_constraintEnd_toEndOf="@+id/scroll_view"
            app:layout_constraintStart_toStartOf="@+id/scroll_view"
            app:layout_constraintTop_toTopOf="@+id/scroll_view">

            <LinearLayout
                android:id="@+id/ll_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/first_name_one"
                        android:layout_width="wrap_content"
                        android:layout_height="48sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/last_name_one"
                        android:layout_width="wrap_content"
                        android:layout_height="48sp"
                        android:gravity="center"
                         />

                </LinearLayout>

                <TextView
                    android:id="@+id/phone_number_one"
                    android:layout_width="wrap_content"
                    android:layout_height="48sp"
                    android:layout_gravity="center"
                    android:gravity="center" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/first_name_two"
                        android:layout_width="wrap_content"
                        android:layout_height="48sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/last_name_two"
                        android:layout_width="wrap_content"
                        android:layout_height="48sp"
                        android:gravity="center" />

                </LinearLayout>

                <TextView
                    android:id="@+id/phone_number_two"
                    android:layout_width="wrap_content"
                    android:layout_height="48sp"
                    android:layout_gravity="center"
                    android:gravity="center" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/first_name_three"
                        android:layout_width="wrap_content"
                        android:layout_height="48sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/last_name_three"
                        android:layout_width="wrap_content"
                        android:layout_height="48sp"
                        android:gravity="center" />

                </LinearLayout>

                <TextView
                    android:id="@+id/phone_number_three"
                    android:layout_width="wrap_content"
                    android:layout_height="48sp"
                    android:layout_gravity="center"
                    android:gravity="center" />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>